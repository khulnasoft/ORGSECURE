name: CI Workflow

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  schedule:
    - cron: '0 0 * * 0' # Runs every Sunday at midnight

jobs:
  # Job for running tests
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14' # Specify your Node.js version

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: npm test

  # Job for Dependabot
  dependabot:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Run Dependabot
        uses: dependabot/dependabot-core@v2
        with:
          package-manager: 'npm' # Specify your package manager
          directory: '/' # Specify the directory where your package.json is located
          update-type: 'all' # Specify the update type

  # Job for CodeQL analysis
  codeql:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Initialize CodeQL
        uses: github/codeql-action/init@v2
        with:
          languages: 'javascript' # Specify your language(s)

      - name: Build the code
        run: npm run build # Adjust this command based on your project

      - name: Run CodeQL analysis
        uses: github/codeql-action/analyze@v2
        with:
          category: 'security' # Specify the category for analysis

  # Job for security checks
  security-checks:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Run security checks
        run: npm audit # Adjust this command based on your project